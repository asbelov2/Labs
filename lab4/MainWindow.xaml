<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="BatKiller" Height="450" Width="800" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" KeyDown="Canvas_KeyDown">
            <Label Content="Press Left Ctrl to launch a fireball" Canvas.Left="10" Canvas.Top="10" Opacity="0.4" FontSize="16" FontFamily="Yu Gothic Medium"/>
            <Label Content="Use WASD to move" Canvas.Left="10" Canvas.Top="46" FontFamily="Yu Gothic Medium" FontSize="16" Opacity="0.4"/>
            <Label Content="Bats killed:" Canvas.Left="550" Canvas.Top="10" Opacity="0.4" FontSize="16" FontFamily="Yu Gothic Medium"/>
            <Label x:Name="BatsKilled" Content="0" Canvas.Left="642" Canvas.Top="10" FontSize="18" Foreground="#FF890000" FontFamily="Yu Gothic UI Semibold" Opacity="0.7"/>
            <Label Content="You can use only one shot on screen" Canvas.Left="10" Canvas.Top="82" Opacity="0.4" FontFamily="Yu Gothic Medium"/>
        </Canvas>

    </Grid>
</Window>
